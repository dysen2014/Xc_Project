<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/ll_user"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/g_me_user_bg"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical" >

            <WebView
                android:id="@+id/wb_login"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="3dp"
                android:background="#00000000"
                android:gravity="center"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_login_join"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/normal"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_login_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#00000000"
                android:gravity="center"
                android:text="立即登录"
                android:textSize="@dimen/text_size_18"/>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#f0fff0" />

        <LinearLayout
            android:id="@+id/ll_business"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ll1_btn_user"
                    android:layout_width="120dp"
                    android:layout_height="@dimen/ll2_hei"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:onClick="btnUser"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/img2_wid"
                        android:layout_height="@dimen/img2_hei"
                        android:background="@drawable/about"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="用户管理"
                        android:textSize="@dimen/text_size_18" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#f0fff0" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#f0fff0" />

                <LinearLayout
                    android:id="@+id/ll1_btn_wireless_auto_meter_read"
                    android:layout_width="120dp"
                    android:layout_height="@dimen/ll2_hei"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:onClick="btnWAMR"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/img2_wid"
                        android:layout_height="@dimen/img2_hei"
                        android:background="@drawable/about"
                        android:layout_marginBottom="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="抄表系统"
                        android:textSize="@dimen/text_size_18" />
                </LinearLayout>
            </LinearLayout>

            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#f0fff0"
                />
            
            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ll2_btn_alertor"
                    android:layout_width="120dp"
                    android:layout_height="@dimen/ll2_hei"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:onClick="btnAlertor"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/img2_wid"
                        android:layout_height="@dimen/img2_hei"
                        android:background="@drawable/about"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="我的物联网"
                        android:textSize="@dimen/text_size_18" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#f0fff0" />

                <LinearLayout
                    android:id="@+id/ll2_btn_about"
                    android:layout_width="120dp"
                    android:layout_height="@dimen/ll2_hei"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:onClick="btnAbout"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/img2_wid"
                        android:layout_height="@dimen/img2_hei"
                        android:background="@drawable/about"
                        android:layout_marginBottom="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="联系我们"
                        android:textSize="@dimen/text_size_18" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

     <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="bottom" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/tint_bottom"
                android:gravity="center"
                android:hint="@string/xa"
                android:orientation="horizontal" />
        </LinearLayout>
</LinearLayout>